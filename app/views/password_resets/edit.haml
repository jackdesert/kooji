%h1 Change My Password

= form_tag(:password_reset, :method => :put) do
  =# f.error_messages
  = label :password, "Password"
  %br
  = password_field :user, :password
  %br
  %br
  = label :password_confirmation, "Password Confirmatoin"
  %br
  = password_field :user, :password_confirmation
  %br
  -# For some reason the perishable token was not being passed by default, so I'm passing it manually so we can reset the password
  = hidden_field_tag :id, @token
  %br
  = submit_tag "Update my password and log me in" 
